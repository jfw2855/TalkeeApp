{% layout 'layout.liquid' %}
{% block content %}
    <div>
        <h2 class="display-6">My Movies</h2>
        <div class="row">
            {% for movie in movies %}
            <div class="movie" style="width: 18rem;">
                <h5 class="card-header">{{ movie.title }}</h5>
                <div class="card-body">
                    <form action="/movie/search" method="POST">
                        <input type="text" name="movieSearch" value="{{movie.title}}" hidden>
                        <input type="image" class="index-img" src="{{movie.img}}" alt="{{movie.title}} Submit">
                    </form>
                    <div class="movie-btns">
                        <form action="/movie/search" method="POST">
                            <input type="text" name="movieSearch" value="{{movie.title}}" hidden>
                            <button class="btn movie-btn btn-outline-secondary" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                              </svg></button>
                        </form>
                        <form action="/movie/{{movie._id}}?_method=DELETE" method="POST">
                            <button class="btn movie-btn btn-outline-danger" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M13.854 2.146a.5.5 0 0 1 0 .708l-11 11a.5.5 0 0 1-.708-.708l11-11a.5.5 0 0 1 .708 0Z"/>
                                <path fill-rule="evenodd" d="M2.146 2.146a.5.5 0 0 0 0 .708l11 11a.5.5 0 0 0 .708-.708l-11-11a.5.5 0 0 0-.708 0Z"/>
                              </svg></button>
                        </form>
                    </div>

                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}