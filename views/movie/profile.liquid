{% layout 'layout.liquid' %}
{% block content %}
    <div>
        <h2 class="display-6">My Movies</h2>
        <div class="row">
            {% for movie in movies %}
            <div class="movie" style="width: 18rem;">
                <h5 class="card-header">{{ movie.title }}</h5>
                <div class="card-body">
                    <form action="/movie/search" method="POST">
                        <input type="text" name="movieSearch" value="{{movie.title}}" hidden>
                        <input type="image" class="index-img" src="{{movie.img}}" alt="{{movie.title}} Submit">
                    </form>

                    <form action="/movie/search" method="POST">
                        <input type="text" name="movieSearch" value="{{movie.title}}" hidden>
                        <button class="btn-info" type="submit">View</button>
                    </form>
                    <form action="/movie/{{movie._id}}?_method=DELETE" method="POST">
                        <button class="btn-info" type="submit">Remove</button>
                    </form>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}