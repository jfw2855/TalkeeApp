{% layout 'layout.liquid'%}
{% block content %}
<div class="col-md-6">
    <form action="/comments/add" method="POST">
        <fieldset>
            <legend>Add Comment</legend>
            <label class="form-label">Comment: </label>
            <input type="text" class="form-control" name="note" placeholder="enter comment here...">
        </fieldset>
        <input type="submit" class="btn btn-success" value="Add Comment">
    </form>
    <!-- comment container -->
    <div class="container-sm justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- loops over the comments -->
            <!-- for every comment render a comment.liquid block -->
           
            {% for comment in comments %}
            <div class="card mb-4 shadow">
                <div class="card-body">
                    <p>User: {{username}}</p>
                   <p>{{comment.note}}</p>
                </div>
            </div>
            <form action="/comments?_method=DELETE" method="POST">
                <input type="hidden" name="id" value="{{comment.id}}">
                <input type="submit" value="delete comment" class="btn btn-danger">
            </form>
            {% endfor %} 
            
        </div>
    </div>
</div>

{% endblock %}

